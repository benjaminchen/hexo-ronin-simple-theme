.row {
    --bs-gutter-x: 0;
}
body {
    font-family: 'Cactus Classical Serif', serif;
    margin: 0 auto;
}
header {
    height: 60px;
    position: sticky;
    padding: 10px;
}
.right-sidebar {
    height: 100%;
    width: 100%;
    position: relative;
    display: inline-block;
}
.right-sidebar-content {
    position: sticky;
    top: 60px;
}
.profile {
    width: 100%;
    height: 100%;
    display: block;
    padding-top: 40px;
}
.profile-picture {
    width: 88px;
    height: 88px;
    display: block;
    border-radius: 50%;
    overflow: hidden;
}
.profile-author {
    font-size: 18px;
    font-weight: 500;
    color: #242424;
    line-height: 20px;
    margin-top: 16px;
    margin-bottom: 0;
}
.profile-description {
    font-size: 16px;
    font-weight: 400;
    color: #242424;
    line-height: 20px;
    margin-top: 16px;
    margin-bottom: 0;
}
.sidebar-menu {
    width: 100%;
    height: 100%;
    display: block;
    padding-top: 20px;
}
.sidebar-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
}
.sidebar-menu ul li {
    margin-bottom: 5px;
}
.sidebar-menu ul li a {
    text-decoration: none;
    color: #242424;
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
}
.sidebar-footer {
    width: 100%;
    height: 100%;
    display: block;
    font-size: 14px;
    font-weight: 400;
    color: #666666;
    line-height: 20px;
    margin-top: 20px;
    margin-bottom: 0;
}

@import 'index';
@import 'paginator';
@import 'archive';
@import 'categories';